@page "/notes"
@using Notes.Data
@using Notes.Services
@inject PersonService PersonService
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.Components.Authorization

<h1>Notes Dashboard</h1>

<AuthorizeView>
<p>
        <a href="/notes/create" class="btn btn-success">Create New</a>
</p>
</AuthorizeView>

@if (people != null)
{
    <table class="table">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Gender</th>
            <th>Phone Number</th>
            <th>Email</th>
            <AuthorizeView>
                <th>Actions</th>
            </AuthorizeView>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in people)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.DateOfBirth.ToShortDateString()</td>
                <td>@item.Gender</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <AuthorizeView>
                    <td>
                        <a href="/notes/edit/@item.Id" class="btn btn-warning">Edit</a> |
                        <a href="/notes/details/@item.Id" class="btn btn-info">Details</a> |
                        <a href="/notes/delete/@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </AuthorizeView>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>Loading...</p>
}

@code {
    private List<Person> people;

    protected override async Task OnInitializedAsync()
    {
        // Fetch the list of people from the PersonService
        people = await PersonService.GetAllPeopleAsync();
    }
}