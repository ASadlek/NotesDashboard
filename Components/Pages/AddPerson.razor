@page "/notes/create"
@using Notes.Data
@using Notes.Services
@inject PersonService PersonService
@inject NavigationManager Navigation

<h1>Create</h1>

<h4>Person</h4>
<hr />

<EditForm Model="Person" OnValidSubmit="HandleCreate" FormName="createPersonForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <span class="text-danger">*</span>
        <label for="firstName">First Name</label>
        <InputText id="firstName" class="form-control" @bind-Value="Person.FirstName" />
        <ValidationMessage For="@(() => Person.FirstName)" />
    </div>

    <div class="form-group">
        <span class="text-danger">*</span>
        <label for="lastName">Last Name</label>
        <InputText id="lastName" class="form-control" @bind-Value="Person.LastName" />
        <ValidationMessage For="@(() => Person.LastName)" />
    </div>

    <div class="form-group">
        <label for="dateOfBirth">Date of Birth</label>
        <InputDate id="dateOfBirth" class="form-control" @bind-Value="Person.DateOfBirth" readonly />
        <ValidationMessage For="@(() => Person.DateOfBirth)" />
    </div>

    <div class="form-group">
        <span class="text-danger">*</span>
        <label for="gender">Mood</label>
        <InputSelect id="mood" class="form-control" @bind-Value="Person.Gender">
            <option value="Happy">Happy</option>
            <option value="Excited">Excited</option>
            <option value="Sad">Sad</option>
            <option value="Angry">Angry</option>
            <option value="Other">Other</option>
        </InputSelect>
        <ValidationMessage For="@(() => Person.Gender)" />
    </div>

    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <InputText id="phoneNumber" class="form-control" @bind-Value="Person.PhoneNumber" />
        <ValidationMessage For="@(() => Person.PhoneNumber)" />
    </div>

    <div class="form-group">
        <span class="text-danger">*</span>
        <label for="email">Email</label>
        <InputText id="email" class="form-control" @bind-Value="Person.Email" />
        <ValidationMessage For="@(() => Person.Email)" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</EditForm>

<div>
    <a href="/people">Back to Dashboard</a>
</div>

@code {
    [SupplyParameterFromForm]
    public Person Person { get; set; } = new();

    protected override void OnInitialized()
    {
        Person.DateOfBirth = DateTime.Today;
    }

    private async Task HandleCreate()
    {
        await PersonService.AddPersonAsync(Person);
        Navigation.NavigateTo("/notes");
    }
}
